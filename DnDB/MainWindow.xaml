<Window x:Class="DnDB.MainWindow" x:Name="mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDB"
        mc:Ignorable="d"
        Title="Spell Viewer" Height="489" Width="917" Loaded="Window_Loaded" Icon="dd-dice-512.png" FontFamily="Comic Neue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!--Main Body Grid-->
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Bottom Bar Subgrid-->
            <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="5" x:Name="BottomSubGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Characters: " VerticalAlignment="Center" FontFamily="Comic Neue" FontSize="14" x:Name="CharaTextBlock"/>
                <Button Grid.Column="1" Content="Create" x:Name="CreateChara" Click="CreateChara_Click" FontFamily="Comic Neue" FontSize="14"/>
                <Button Grid.Column="2" Content="Rename" x:Name="RenameChara" Click="RenameChara_Click" FontFamily="Comic Neue" FontSize="14"/>
                <Button Grid.Column="3" Content="Delete" x:Name="DeleteChara" Click="DeleteChara_Click" FontFamily="Comic Neue" FontSize="14"/>
                <TextBlock x:Name="AddSpellsToTextBlock" Grid.Column="5" Text="Add Spells to  " VerticalAlignment="Center" FontFamily="Comic Neue" FontSize="14"/>
                <ComboBox Grid.Column="6" x:Name="AddToThisClass" FontFamily="Comic Neue" FontSize="14"/>
                <Button Grid.Column="7" x:Name="AddSpell" Content="Add" Click="AddSpell_Click" FontFamily="Comic Neue" FontSize="14"/>
                <Button Grid.Column="8" x:Name="RemoveSpell" Content="Remove" Click="RemoveSpell_Click" FontFamily="Comic Neue" FontSize="14"/>
            </Grid>

            <!--Main Body-->
            <TextBox Grid.Row="5"
                     Grid.Column="0" 
                     Grid.ColumnSpan="5"
                     x:Name="SpellDescription"
                     Text="Description"
                     FontSize="18"
                     VerticalScrollBarVisibility="Auto" 
                     IsReadOnly="True" FontFamily="Comic Neue"/>
            <TextBlock x:Name="SpellName" 
                       Grid.Row="0" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="5" 
                       FontSize="36" 
                       Text="Spell Name" 
                       TextAlignment="Center" FontFamily="Comic Neue"/>
            <Grid Grid.Row="0" Grid.Column="4">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Options"
                        Grid.Row="0"
                        Grid.Column="1"
                        Content="⚙️"
                        FontSize="20" Click="Options_Click" FontFamily="Comic Neue"
                />
            </Grid>
            <TextBlock x:Name="SpellLevel" 
                       Grid.Row="1"
                       Grid.Column="0"
                       FontSize="18"
                       Text="Level N"
                       TextAlignment="Center" FontFamily="Comic Neue"/>
            <TextBlock x:Name="SpellSchool" 
                       Grid.Row="1"
                       Grid.Column="1"
                       FontSize="18"
                       Text="School-Name"
                       TextAlignment="Center" FontFamily="Comic Neue"/>
            <TextBlock x:Name="SpellCastTime" 
                       Grid.Row="1"
                       Grid.Column="2"
                       FontSize="18"
                       Text="Casting Time: 1 Unit"
                       TextAlignment="Center" FontFamily="Comic Neue"/>
            <TextBlock x:Name="SpellDuration" 
                       Grid.Row="1"
                       Grid.Column="3"
                       FontSize="18"
                       Text="Duration: Sure"
                       TextAlignment="Center" FontFamily="Comic Neue"/>
            <TextBlock x:Name="SpellRange" 
                       Grid.Row="1"
                       Grid.Column="4"
                       FontSize="18"
                       Text="Range: Forever"
                       TextAlignment="Center" FontFamily="Comic Neue"/>
            <TextBlock x:Name="SpellInfo" 
                       Grid.Row="3"
                       Grid.Column="0"
                       Grid.ColumnSpan="5"
                       FontSize="18"
                       Text="Other Info"
                       TextAlignment="Left" FontFamily="Comic Neue"/>

        </Grid>

        <!--Sidebar Grid-->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0"
                      x:Name="SelectedClass" SelectionChanged="SelectedClass_SelectionChanged" FontFamily="Comic Neue" FontSize="14"/>
            <ComboBox Grid.Row="1"
                      x:Name="SelectedLevel" SelectionChanged="SelectedLevel_SelectionChanged" FontFamily="Comic Neue" FontSize="14"/>
            <ComboBox Grid.Row="2" x:Name="SelectedSchool" FontFamily="Comic Neue" FontSize="14"/>
            <TextBox Grid.Row="3"
                     x:Name="SearchBox"
                     SelectionChanged="SearchBox_OnSelectionChanged" FontFamily="Comic Neue" FontSize="16"/>
            <ListBox Grid.Row="4"
                     Grid.Column="0"
                     x:Name="SpellList" IsSynchronizedWithCurrentItem="False" SelectionChanged="SpellList_SelectionChanged" FontFamily="Comic Neue" FontSize="14" MouseDoubleClick="SpellList_MouseDoubleClick"/>
        </Grid>
    </Grid>
</Window>